{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "~*": [
        "src/*"
      ],
      "~assets": [
        "assets"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "jsx": "react-native",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "target": "esnext",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".eslint.config.js",
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ],
  "extends": "expo/tsconfig.base"
}
